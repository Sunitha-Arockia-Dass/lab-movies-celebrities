<div class="new">
        
{{#with movie}}
<h2>Update {{title}} movie</h2>
<form action="/movies/{{id}}/update" method="post">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="{{title}}"><br><br>
        <label for="genre">Genre:</label>
        <input type="text" id="genre" name="genre" value="{{genre}}"><br><br>
        <label for="plot">Plot:</label>
        <input type="text" id="plot" name="plot" value="{{plot}}"><br><br>
{{/with }}
       <label for="cast">Choose a cast:</label>
<select name="cast" id="cast" multiple>
  {{#each allCast}}
    <option value={{id}}>{{name}}</option>
  {{/each}}
</select>
<input class="new-btn" type="submit" name="update" value="Update">

</form>
</div>
